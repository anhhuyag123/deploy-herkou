@model webgame.Models.HeMay
@{
    ViewBag.Title = "Editdm";
    Layout = "~/Views/Shared/LayoutAdmin.cshtml";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="col-md-8">
        <div class="card">
            <div class="header">
                <h4 class="title">Sữa Dòng Máy</h4>
            </div>
            <div class="content">
                <form>
                    <div class="row">
                        <div class="col-md-5">
                            <div class="form-group">
                                <label>ID (Mặc Định & Tự Tăng)</label>
                                <input type="text" class="form-control" disabled placeholder="@Model.Madong">
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label>Tên Dòng Máy</label>
                                <input type="text" class="form-control" name="txttendong" value="@Model.Tendong">
                            </div>
                        </div>
                    </div>
                    <button type="submit" class="btn btn-info btn-fill pull-right">Sữa Dòng Máy</button>
                    <button type="button" class="btn database"><a href="@Url.Action("Index", "DongMay")">Về Database</a></button>
                </form>
            </div>
        </div>
    </div>
}


