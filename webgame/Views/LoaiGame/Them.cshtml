
@{
    ViewBag.Title = "Them";
    Layout = "~/Views/Shared/LayoutAdmin.cshtml";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-8">
                <div class="card">
                    <div class="header">
                        <h4 class="title">Thêm Loại Game</h4>
                    </div>
                    <div class="content">
                        <form>
                            <div class="row">
                                <div class="col-md-5">
                                    <div class="form-group">
                                        <label>ID (Mặc Định & Tự Tăng)</label>
                                        <input type="text" class="form-control" disabled placeholder="ID">
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label>Tên Loại Game</label>
                                        <input type="text" class="form-control" name="txttenloai">
                                        @ViewData["Loi1"]
                                    </div>
                                </div>
                            </div>
                            <button type="submit" class="btn btn-info btn-fill pull-right">Thêm Loại Game</button>
                            <button type="button" class="btn database"><a href="@Url.Action("Index","LoaiGame")">Về Danh Sách Loại Game</a></button>
                            <div class="clearfix"></div>
                        </form>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card card-user">
                    <div class="image">
                        <img src="https://ununsplash.imgix.net/photo-1431578500526-4d9613015464?fit=crop&fm=jpg&h=300&q=75&w=400" alt="..." />
                    </div>
                    <div class="content">
                        <div class="author">
                            <a href="#">
                                <img class="avatar border-gray" src="~/assets/img/faces/index2.jpg" alt="..." />
                                <h4 class="title">
                                    DucVM<br />
                                    <small>(ProssVM)</small>
                                </h4>
                            </a>
                        </div>
                        <p class="description text-center">
                            "ProssVM <br>
                            Hãy sống cuộc đợi của bạn và <br>
                            đừng bao giờ gục ngã (Never Give Up)"
                        </p>
                    </div>
                    <hr>
                    <div class="text-center">
                        <button href="https://www.facebook.com/duc.vm.7" target="_blank" class="btn btn-simple"><i class="fa fa-facebook-square"></i></button>
                        <button href="#" class="btn btn-simple"><i class="fa fa-twitter"></i></button>
                        <button href="#" class="btn btn-simple"><i class="fa fa-google-plus-square"></i></button>
                    </div>
                </div>
            </div>
        </div>
    </div>
}

