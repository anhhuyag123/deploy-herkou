<section>
    <div class="container">
        <div class="row">
            <div class="col-sm-3">
                <div class="left-sidebar">

                    <div class="brands_products">
                        <!--brands_products-->
                        <h2>Hệ máy</h2>
                        @Html.Action("DongMay", "User")
                    </div><!--/brands_products-->

                    <div class="brands_products" style="margin-top:20px;">
                        <!--brands_products-->
                        <h2>Nhà sản xuất</h2>
                        @Html.Action("NhaSanXuat", "User")
                    </div><!--/brands_products-->

                    <div class="price-range">
                        <!--price-range-->
                        <h2>Tìm theo giá</h2>
                        <div class="well text-center">
                            <input type="text" class="span2" value="" data-slider-min="0" data-slider-max="600" data-slider-step="5" data-slider-value="[250,450]" id="sl2"><br />
                            <b class="pull-left">$ 0</b> <b class="pull-right">$ 600</b>
                        </div>
                    </div><!--/price-range-->

                    <div class="shipping text-center" style="margin-bottom:20px;">
                        <!--shipping-->
                        <img src="~/images/giph2y.gif" />
                    </div><!--/shipping-->
                    <div class="shipping text-center" style="margin-bottom:20px;">
                        <!--shipping-->
                        <img src="~/images/gf.gif" />
                    </div><!--/shipping-->
                    <div class="shipping text-center" style="margin-bottom:20px;">
                        <!--shipping-->
                        <img src="~/images/qc.gif" />
                    </div><!--/shipping-->
                </div>
            </div>

            <div class="col-sm-9 padding-right">
                <div class="features_items">
                    <!--features_items-->
                    <h2 class="title text-center">Sản phẩm mới</h2>

                    @foreach (var sanpham in Model)
                    {
                        <div class="col-sm-4" id="chitiet">
                            <div class="product-image-wrapper">
                                <div class="single-products">
                                    <div class="productinfo text-center">
                                        <img src="~/images/@sanpham.HinhAnh" alt="@sanpham.TenSP" style="height:250px; width:200px;" />
                                        <h4>@sanpham.TenSP</h4>
                                        @if (@sanpham.KhuyenMai == true)
                                        {
                                            <p>
                                                <h4 style="text-decoration:line-through;color:red;">Giá cũ: @sanpham.GiaBan VNĐ</h4>
                                            </p>
                                            <h2>Giá khuyến mãi:<br>@sanpham.GiaSale VNĐ</h2>
                                        }
                                        else
                                        {
                                            <p>Dễ dàng đặt hàng tốt</p>
                                            <h2>Giá bán:<br>@sanpham.GiaBan VNĐ</h2>
                                        }
                                        <a href="@Url.Action("chitiet","User",new { id = sanpham.MaSP})#chitiet" class="btn btn-default add-to-cart"><i class="fa fa-shopping-cart"></i>Đặt hàng</a>
                                    </div>
                                    <div class="product-overlay">
                                        <div class="overlay-content">
                                            <h4>@sanpham.TenSP</h4>
                                            @if (@sanpham.KhuyenMai == true)
                                            {
                                                <h2>Giá khuyến mãi:<br>@sanpham.GiaSale VNĐ</h2>
                                            }
                                            else
                                            {
                                                <h2>Giá bán:<br>@sanpham.GiaBan VNĐ</h2>
                                            }
                                            <a href="@Url.Action("themgiohang", "GioHang", new { @imagame = @sanpham.MaSP, @strUrl = Request.Url.ToString()})#chitiet" class="btn btn-default add-to-cart"><i class="fa fa-shopping-cart"></i>Đặt hàng</a>
                                        </div>
                                    </div>
                                    <img src="~/images/home/new.png" class="new" alt="" />
                                </div>
                                <div class="choose">
                                    <ul class="nav nav-pills nav-justified">
                                        <li><a href="@Url.Action("chitiet","User",new { id = sanpham.MaSP})#chitiet"><i class="fa fa-plus-square"></i>Xem chi tiết</a></li>
                                    </ul>
                                </div>
                            </div>
                        </div>
                    }

                </div><!--features_items-->

                Trang @(Model.PageCount<Model.PageNumber?0:Model.PageNumber)/@Model.PageCount;
                <div class="Menutrang">
                    @Html.PagedListPager(Model,page=>Url.Action("Index", new { page = page }))
                </div>
                <style>
                    .Menutrang li{
                        display:inline;
                    }
                </style>

                <div class="category-tab">
                    <!--category-tab-->
                    <div class="col-sm-12">
                        <ul class="nav nav-tabs">
                            <li class="active"><a href="#tshirt" data-toggle="tab">Sản phẩm khuyến mãi</a></li>
                            @*@Html.Action("listloaigame", "User")*@
                        </ul>
                    </div>
                    <div class="tab-content" id="khuyenmai">
                        @foreach (var sanpham in Model)
                        {
                            if (@sanpham.KhuyenMai == true && @sanpham.TT == true)
                            {
                                <div class="col-sm-4">
                                    <div class="product-image-wrapper">
                                        <div class="single-products">
                                            <div class="productinfo text-center">
                                                <div class="single-products">
                                                    <div class="productinfo text-center">
                                                        <img src="~/images/@sanpham.HinhAnh" alt="" style="width:200px;height:250px;" />
                                                        <h4 style="text-decoration:line-through;color:red;">Giá cũ: @sanpham.GiaBan VNĐ</h4>
                                                        <h2>Chỉ còn:<br>@sanpham.GiaSale VNĐ</h2>
                                                        <h4>@sanpham.TenSP</h4>
                                                        <a href="@Url.Action("themgiohang", "GioHang", new { @imagame = @sanpham.MaSP, @strUrl = Request.Url.ToString()})#khuyenmai">
                                                            <button type="button" class="btn btn-default add-to-cart"><i class="fa fa-shopping-cart"></i>Đặt hàng</button>
                                                        </a>
                                                    </div>
                                                </div>
                                                <div class="choose">
                                                    <ul class="nav nav-pills nav-justified">
                                                        <li><a href="@Url.Action("chitiet", "User", new { id = @sanpham.MaSP })#chitiet"><i class="fa fa-plus-square"></i>Xem chi tiết</a></li>
                                                    </ul>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            }
                        }
                        @*<div class="tab-pane fade" id="blazers">
                                <div class="col-sm-3">
                                    <div class="product-image-wrapper">
                                        <div class="single-products">
                                            <div class="productinfo text-center">
                                                <img src="~/images/home/gallery4.jpg" alt="" />
                                                <h2>$56</h2>
                                                <p>Dễ dàng đặt hàng tốt</p>
                                                <a href="#" class="btn btn-default add-to-cart"><i class="fa fa-shopping-cart"></i>Đặt hàng</a>
                                            </div>

                                        </div>
                                    </div>
                                </div>
                            </div>*@

                    </div>
                </div><!--/category-tab-->

                <div class="recommended_items">
                    <!--recommended_items-->
                    <h2 class="title text-center">Sản phẩm đề xuất</h2>

                    <div id="recommended-item-carousel" class="carousel slide" data-ride="carousel">
                        <div class="carousel-inner">
                            <div class="item active">
                                @Html.Action("Dexuat", "User")
                            </div>
                            <div class="item">
                                @Html.Action("Dexuat", "User")
                            </div>
                        </div>
                        <a class="left recommended-item-control" href="#recommended-item-carousel" data-slide="prev">
                            <i class="fa fa-angle-left"></i>
                        </a>
                        <a class="right recommended-item-control" href="#recommended-item-carousel" data-slide="next">
                            <i class="fa fa-angle-right"></i>
                        </a>
                    </div>
                </div><!--/recommended_items-->

            </div>
        </div>
    </div>
</section>


